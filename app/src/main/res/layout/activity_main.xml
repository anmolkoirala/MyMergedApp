<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <TextView
            android:id="@+id/mainheadertitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="25sp"
            android:gravity="center"
            android:text="Choose a demo"/>

        <Button
            android:id="@+id/buttonWordg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/btn_style"
            android:background="@drawable/mainbutton_background"
            android:text="Wordgame Demo"/>

        <Button
            android:id="@+id/buttonCrudop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/btn_style"
            android:background="@drawable/mainbutton_background"
            android:text="CRUD Demo"/>
    </LinearLayout>
</ScrollView>